@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<BlazorPlayGround.Components.MySecondComponent CurrentCounterValue=@currentCount />


@code {
    private int currentCount = 0;

    private async Task IncrementCount()
    {
        currentCount++;
        if (currentCount % 3 == 0)
        {
            await OneMultipleOfThree.InvokeAsync(currentCount);
        }
    }
    [Parameter]
    public EventCallback<int> OneMultipleOfThree { get; set; }
     
}
